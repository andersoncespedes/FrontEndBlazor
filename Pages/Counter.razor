@page "/counter"
@using Radzen.Blazor
<PageTitle>Counter</PageTitle>
<h1>Counter</h1>
<RadzenScheduler Data="@events" TItem="EventData" StartProperty="Start" EndProperty="End" TextProperty="Text">
    <Template Context="EventData">
        <strong>@EventData.Text</strong>
    </Template>
    <ChildContent>
        <RadzenMonthView />
        <RadzenWeekView />
    </ChildContent>
</RadzenScheduler>

@code {
    private EventData[] events;
    protected override async Task OnInitializedAsync()
    {
        events = await GetEventsAsync();
    }
    private async Task<EventData[]> GetEventsAsync()
    {
        // Simula la obtención de datos de una fuente externa
        await Task.Delay(1000);
        return new EventData[]
        {
new EventData { Id = 1, Text = "Birthday", Start = DateTime.Now, End = DateTime.Now.AddHours(1) },
new EventData { Id = 2, Text = "Sport", Start = DateTime.Now.AddDays(1), End = DateTime.Now.AddDays(1).AddHours(2) },
new EventData { Id = 3, Text = "Youtube", Start = DateTime.Now.AddDays(2), End = DateTime.Now.AddDays(2).AddHours(3) }
        };
    }
    internal class EventData
    {
        public int Id { get; set; }
        public string Text { get; set; }
        public DateTime Start { get; set; }
        public DateTime End { get; set; }
    }
}
